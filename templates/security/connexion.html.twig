{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container">
        <h1>Connexion</h1>

        <div class="row">
            <div class="col-md-6">
                <form action="{{ path('connexion') }}" method="POST">
                    {% if errors %}
        <div class="alert alert-danger">{{ errors.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
                    <div class="form-group">
                        <label for="username">Nom d'utilisateur</label>
                        <input type="text" class="form-control" name="_username" value="{{lastUsername}}">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" class="form-control" name="_password" placeholder="Mots de passe">
                    </div>
                    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
                    <button class="btn btn-dark">Se connecter</button>
                </form>
            </div>
        </div>
    </div> 

    
{% endblock %}

